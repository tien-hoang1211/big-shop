<form action="/admin/product-category/update" method="POST">
    <div class="panel panel-widget forms-panel">
        <div class="forms">
            <div class=" form-grids form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms">
                    <div class="form-title">
                        <h4>{{banerTitle}} : {{productCategory.name}}</h4>
                    </div>
                    <div class="form-body">
                        <form class="form-horizontal" action="#" method="post">
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Tên danh mục</label>
                                <div class="col-sm-9">
                                    <input type="text" name="name" value="{{productCategory.name}}" class="form-control" id="name" placeholder="Tên danh mục...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="seo_url" class="col-sm-2 control-label">SEO Url</label>
                                <div class="col-sm-9">
                                    <input type="text" name="seo_url" value="{{productCategory.seo_url}}" class="form-control" id="seo_url" placeholder="Seo Url...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="meta_title" class="col-sm-2 control-label">Meta Title</label>
                                <div class="col-sm-9">
                                    <input type="text" name="meta_title" value="{{productCategory.meta_title}}" class="form-control" id="meta_title" placeholder="Meta Title...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="meta_description" class="col-sm-2 control-label">Meta Description</label>
                                <div class="col-sm-9">
                                    <input type="text" name="meta_description" value="{{productCategory.meta_description}}" class="form-control" id="meta_description" placeholder="Meta Description...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="displayorder" class="col-sm-2 control-label">Thứ tự hiển thị</label>
                                <div class="col-sm-9">
                                    <input type="number" min="0" name="displayorder" value="{{productCategory.displayorder}}" class="form-control" id="displayorder" placeholder="Thứ tự hiển thị...">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="status" class="col-sm-2 control-label">Trạng thái</label>
                                <div class="col-sm-9">
                                    <input type="radio" name="status" checked="{{productCategory.status}}" id="status"> Hiển thị
                                </div>
                            </div>
                            <div class="col-sm-offset-2">
                                <button type="submit" class="btn btn-default w3ls-button">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>